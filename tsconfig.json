{
    "compilerOptions":{
        "strict":true,
        "lib":["dom","ESNext"],
        "target":"ESNext",
        "esModuleInterop":true,
        "baseUrl":".",
        "moduleResolution":"node",
        "types":[
            "svelte"
        ],
        "paths":{
            "components/*":["web/components/*"],
            "lib/*":["web/lib/*"],
            "hooks/*":["web/hooks/*"],
        }
    },
    "include":[
        "**/*.ts",
        "**/*.d.ts"
    ],
    "exclude":[
        "node_modules"
    ]
}